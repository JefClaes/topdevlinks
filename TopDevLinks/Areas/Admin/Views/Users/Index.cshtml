@{
    ViewBag.Title = "Users";
}

@model TopDevLinks.Areas.Admin.Models.ViewModels.UsersIndexViewModel

<div class="page-header">
    <h1>Users</h1>    
</div>
<div class="row">    
    @using (Html.BeginForm("Index", "Users", FormMethod.Post, new { @class="form-horizontal" } )) {    
        <div class="span12">
        <fieldset>          
            <div class="control-group">
                <label class="control-label" for="input01">@Html.LabelFor(m => m.Login)</label>
                <div class="controls">                    
                    @Html.TextBoxFor(m => m.Login, new { @class="input-xlarge", style="width: 97%" })                    
                    @Html.ValidationMessageFor(m => m.Login)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="input01">@Html.LabelFor(m => m.Email)</label>
                <div class="controls">                    
                    @Html.TextBoxFor(m => m.Email, new { @class="input-xlarge", style="width: 97%" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="input01">@Html.LabelFor(m => m.Password)</label>
                <div class="controls">                    
                    @Html.PasswordFor(m => m.Password, new { @class="input-xlarge", style="width: 97%" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>  
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Add</button>            
            </div>                
        </fieldset>
        </div>      
    }         
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>Login</td>
            <td>Email</td>
            <td>Activated</td>
            <td>&nbsp;</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users.Items)
        {
            <tr>
                <td>@user.Login</td>
                <td>@user.Email</td>
                <td>@Html.Raw(user.Activated ? "Yes" : "No")</td>
                <td>
                    @if (user.CanBeDeactivated)
                    {
                        using (Html.BeginForm("Index", "Users", new { id = user.Id }, FormMethod.Post))
                        {
                            <button type="submit" class="btn btn-danger">Deactivate</button>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>