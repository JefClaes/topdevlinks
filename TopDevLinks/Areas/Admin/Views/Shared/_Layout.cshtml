<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/css")" rel="stylesheet" type="text/css" />
    <link href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/bootstrap/css")" rel="stylesheet" type="text/css" />
    <link href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/themes/base/css")" rel="stylesheet" type="text/css" />
    <script src="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Scripts/js")"></script>    
    <script src="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Scripts/bootstrap")"></script>    
    <script src="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Scripts/backbone")"></script>    
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
        <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="#">TopDevLinks</a>
            <div class="nav-collapse">
                <ul class="nav">
                    <li class="">
                        <a href="@Url.Action("Index", "Posts")">Posts</a>
                    </li>
                    <li class="">
                        <a href="@Url.Action("Index", "Users")">Users</a>
                    </li>      
                     <li class="">
                        @{
                            if (Request.IsAuthenticated)
                            {
                                <a href="@Url.Action("Logout", "Account", new { area = "" })">Logout</a>
                            }
                            else
                            {
                                <a href="@Url.Action("Login", "Account", new { area = "" })">Login</a>
                            }
                        }
                    </li>           
                </ul>
            </div>
        </div>
        </div>
    </div>

    <div class="container">    
        @RenderBody()        
    </div>

    @RenderSection("JavaScriptBottom", required: false)

</body>
</html>
