@{
    ViewBag.Title = "Categories";
}

<div class="page-header">
    <h1>Categories</h1>    
</div>
<div class="row">    
    @using (Html.BeginForm("Index", "Categories", FormMethod.Post, new { @class="form-horizontal" } )) {    
        <div class="span12">
        <fieldset>          
            <div class="control-group">
                <label class="control-label" for="input01">@Html.LabelFor(m => m.Url)</label>
                <div class="controls">                    
                    @Html.TextBoxFor(m => m.Url, new { @class="input-xlarge", style="width: 97%" })                    
                    @Html.ValidationMessageFor(m => m.Url)
                </div>
            </div>           
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Add</button>            
            </div>                 
        </fieldset>
        </div>        
    }         
</div>
